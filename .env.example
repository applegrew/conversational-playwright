# API Keys
# Choose your LLM provider: claude, gemini, or fara
LLM_PROVIDER=claude

# Anthropic Claude API Key (if using claude)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Gemini API Key (if using gemini)
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.5-flash-lite

# Microsoft Fara Configuration (if using fara)
# Fara runs locally via Llama.cpp server - no API key needed
# Set this to your Llama.cpp server URL (OpenAI-compatible endpoint)
FARA_REST=http://127.0.0.1:5001

# MCP Server Configuration
# Port for the Playwright MCP server (default: 3000)
MCP_SERVER_PORT=3000

# Logging Configuration
# Options: ERROR, WARN, INFO, DEBUG, VERBOSE
# Use VERBOSE to see screenshot streaming logs
LOG_LEVEL=INFO
